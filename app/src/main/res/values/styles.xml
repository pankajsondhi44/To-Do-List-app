<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseTheme">

    </style>

    <style name="DarkTheme" parent="AppTheme">
        <item name="android:buttonStyle">@style/DarkButtonColor</item>
        <item name="android:textColorPrimary">@color/textColor_dark</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorPrimary">@color/navigation_dark</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/button_background_dark</item>
        <item name="android:textColorSecondary">@color/textColor_dark</item>
        <item name="android:textColorHint">@color/textColor_dark</item>
    </style>

    <style name="DarkButtonColor" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="colorButtonNormal">@color/button_background_dark</item>
        <item name="android:textColor">@color/textColor_dark</item>
        <item name="buttonTint">@color/button_background_dark</item>
    </style>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <!--<item name="textColorPrimary">@color/colorAccent</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
